

<div class="row">
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= @student.name %></span>
          <span class="card-title">Email: <%= @student.email %></span>
          <p> course Enrolments: none</p>
        </div>
      </div>
      <% if current_user == @student %>
      <%= link_to '<i class="material-icons left">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn-small" %>
      <% end %>
    </div>
</div>