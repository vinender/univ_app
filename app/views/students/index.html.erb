<div class="row">
	<div class="col s12">
		<h3 align="center">Student Directory</h3>
	</div>
	</div>


  <div class="row">
  	<% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= student.name %></span>
          <span class="card-title">Email: <%= student.email %></span>
          <p> course Enrolments: none</p>
        </div>
        <div class="card-action">
          <a href="#">View Profile</a>
        </div>
      </div>
    </div>
   <% end %>
</div>

     
  



